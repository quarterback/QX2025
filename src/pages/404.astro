---
import { Button, Container, TextCardSection } from '@components/odyssey-theme';
import Layout from '../layouts/Page.astro';

const seo = {
  title: '404 – Not Found | Out of Scope',
  description: 'This page doesn’t exist, but many others do.',
};
---

<Layout {seo}>
  <Container>
    <TextCardSection>
      <h1>404 – Page Not Found</h1>
      <p>
        This page might’ve been removed, renamed, or never existed in the first place.
        It happens. Return to the homepage or explore the latest entries in the journal.
      </p>
      <div class="cta-buttons__container">
        <Button href="/">Return Home</Button>
        <Button href="/journal">View Journal</Button>
      </div>
    </TextCardSection>
  </Container>
</Layout>

<style>
  .cta-buttons__container {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  :global(h1) {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  :global(p) {
    font-size: 1rem;
    color: var(--theme-color-text-muted);
  }
</style>
